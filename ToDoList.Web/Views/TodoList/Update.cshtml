
@{
    ViewData["Title"] = "Update";
}
<link href="c:\users\dell\desktop\todolist\todolist.web\views\shared\_layout.cshtml.css" rel="stylesheet" />
<style>
    .btn {
        background-color: #cdcdc1;
        color:white;
    }

        .btn:hover {
            background-color: #8b6969;
            color: #cdcdc1;
        }

    h1 {
        color: white;
        text-align: center;
    }

    .form-label {
        color: white;
    }
</style>
@model TodoList
<h1 style="margin-top:100px;">GÖREVİ GÜNCELLE</h1>
<form asp-controller="TodoList" asp-action="Update" method="post">
    <div class="form-group mb-3">
        <select asp-for="Priority" class="form-control">
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High">High</option>
        </select>
    </div>
    <div class="form-group mb-3">
        <label for="taskDate" class="form-label">Tarih Seçin:</label>
        <input type="date" class="form-control" asp-for="TaskDate">
    </div>
    <div class="form-group mb-3">
        <label for="text" class="form-label">Görev Açıklaması:</label>
        <input type="text" class="form-control" asp-for="Title">
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-outline ">DÜZENLE</button>
</form>
